        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:launchMode="singleTask"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:testOnly="false"
        android:theme="@style/AppTheme.NoActionBar"
        tools:replace="android:name, android:theme, android:allowBackup">
        <activity
            android:name="io.awallet.crypto.alphawallet.ui.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!--<data-->
                <!--android:host="stormbird.duckdns.org"-->
                <!--android:path="/import"-->
                <!--android:scheme="http"/>-->

                <data
                    android:host="app.awallet.io"
                    android:pathPrefix="/"
                    android:scheme="https" />
            </intent-filter>
        </activity>

        <activity
            android:name="io.awallet.crypto.alphawallet.ui.WalletsActivity"
            android:label="@string/title_account_list" />

        <activity
