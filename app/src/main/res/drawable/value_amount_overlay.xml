<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="@color/translucentWhite" />
            <padding
                android:bottom="2dip"
                android:left="2dip"
                android:right="2dip"
                android:top="2dip" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/azure" />
            <size
                android:width="@dimen/dp20"
                android:height="@dimen/dp20" />
        </shape>
    </item>

</layer-list>