<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_simple_toolbar"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <com.alphawallet.app.widget.InputAddress
        android:id="@+id/input_view_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:label="@string/signer_address"
        app:nocam="false"
        app:show_header="false"
        app:show_paste="true"
        app:ens="true"
        android:layout_marginTop="34dp"
        android:layout_marginHorizontal="@dimen/dp8"
        app:layout_constraintTop_toBottomOf="@id/toolbar"/>

    <com.alphawallet.app.widget.InputView
        android:id="@+id/input_view_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:label="@string/hint_contract_name"
        app:hint="@string/hint_contract_name"
        app:nocam="true"
        app:show_paste="false"
        android:layout_marginTop="@dimen/dp16"
        android:layout_marginHorizontal="@dimen/dp8"
        app:layout_constraintTop_toBottomOf="@id/input_view_address"/>

    <Button
        android:id="@+id/btn_save"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/selector_round_button"
        android:fontFamily="@font/font_semibold"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="@string/action_save_address"
        android:textAllCaps="true"
        android:textColor="@color/button_text_color"
        android:textSize="16sp"
        android:layout_marginHorizontal="@dimen/dp16"
        android:layout_marginBottom="@dimen/dp16"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>