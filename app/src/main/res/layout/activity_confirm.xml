<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <include layout="@layout/layout_app_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/title_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/font_light"
                android:gravity="center"
                android:text="@string/confirm_transfer_details"
                android:textColor="@color/text_black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/label_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/font_regular"
                android:text="@string/amount"
                android:textAllCaps="true"
                android:textColor="@color/light_gray"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/text_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/font_bold"
                android:gravity="center"
                android:text="@string/dummy_transaction_value"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/font_regular"
                    android:text="@string/label_from"
                    android:textAllCaps="true"
                    android:textColor="@color/light_gray"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/text_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/background_round_grey"
                    android:fontFamily="@font/font_semibold"
                    android:gravity="center"
                    android:padding="15dp"
                    android:textIsSelectable="true"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/label_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/font_regular"
                    android:text="@string/label_to"
                    android:textAllCaps="true"
                    android:textColor="@color/light_gray"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/text_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/background_round_grey"
                    android:fontFamily="@font/font_semibold"
                    android:gravity="center"
                    android:padding="15dp"
                    android:textIsSelectable="true"
                    android:textSize="14sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/label_gas_price"
                            android:textColor="@color/light_gray"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/font_regular"
                            android:textAllCaps="true"
                            android:layout_gravity="center_horizontal"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_gas_price" />

                        <TextView
                            android:id="@+id/text_gas_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/background_round_grey"
                            android:fontFamily="@font/font_semibold"
                            android:gravity="center"
                            android:padding="15dp"
                            android:textIsSelectable="true"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/label_gas_limit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_gas_limit"
                            android:textColor="@color/light_gray"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/font_regular"
                            android:textAllCaps="true"
                            android:layout_gravity="center_horizontal"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/text_gas_limit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/background_round_grey"
                            android:fontFamily="@font/font_semibold"
                            android:gravity="center"
                            android:padding="15dp"
                            android:textIsSelectable="true"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/label_network_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/light_gray"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/font_regular"
                            android:textAllCaps="true"
                            android:layout_gravity="center_horizontal"
                            android:textSize="10sp"
                            android:text="@string/label_network_fee" />

                        <TextView
                            android:id="@+id/text_network_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/background_round_grey"
                            android:fontFamily="@font/font_semibold"
                            android:gravity="center"
                            android:padding="15dp"
                            android:textIsSelectable="true"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/send_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentBottom="true"
            android:background="@drawable/selector_button"
            android:fontFamily="@font/font_regular"
            android:gravity="center"
            android:text="@string/action_confirm"
            android:textAllCaps="false"
            android:textColor="@color/button_text_color"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>