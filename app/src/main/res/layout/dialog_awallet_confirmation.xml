<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/giant_40"
    android:background="?colorBackgroundFloating"
    android:orientation="vertical"
    android:paddingTop="@dimen/base_24"
    android:paddingBottom="@dimen/base_24">

    <TextView
        android:id="@+id/dialog_main_text"
        style="@style/Aw.Typography.SemiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        tools:text="Main Text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standard_16"
        android:orientation="vertical"
        android:padding="@dimen/standard_16">

        <TextView
            android:id="@+id/dialog_small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:visibility="gone"
            tools:text="Small text"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/dialog_medium_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:visibility="gone"
            tools:text="Medium Text"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/dialog_big_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:visibility="gone"
            tools:text="Large Text"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/cozy_20"
        android:paddingEnd="@dimen/cozy_20">

        <TextView
            android:id="@+id/dialog_extra_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/cozy_20"
            android:gravity="center"
            tools:text="Extra Text" />

        <LinearLayout
            android:id="@+id/dialog_button1_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dialog_button1"
                style="@style/Aw.Component.Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                tools:text="Action" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_button2"
            style="@style/Aw.Component.Button.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            tools:text="Secondary" />
    </LinearLayout>

</LinearLayout>