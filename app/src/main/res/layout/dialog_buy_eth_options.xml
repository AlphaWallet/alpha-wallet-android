<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.alphawallet.app.widget.BottomSheetHandleView
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/buy_with_coinbase_pay"
        style="@style/Aw.Component.ActionItem"
        android:text="@string/buy_with_coinbase_pay" />

    <TextView
        android:id="@+id/buy_with_ramp"
        style="@style/Aw.Component.ActionItem"
        android:text="@string/buy_with_ramp" />

</LinearLayout>


