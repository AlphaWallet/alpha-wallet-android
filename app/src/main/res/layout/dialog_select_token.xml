<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/action_sheet_header">

        <ImageView
            android:id="@+id/image_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/small_12"
            android:contentDescription="@string/action_close"
            android:src="@drawable/ic_close"
            app:tint="?colorControlNormal" />

        <TextView
            style="@style/Aw.Typography.SemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp8"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_toStartOf="@id/logo"
            android:layout_toEndOf="@id/image_close"
            android:gravity="center_horizontal"
            android:text="@string/title_select_token" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/token_icon"
            android:layout_height="@dimen/token_icon"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/mini_4"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_launcher_foreground" />

    </RelativeLayout>

    <View style="@style/Aw.Component.Separator" />

    <LinearLayout
        android:id="@+id/layout_search_tokens"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="@dimen/tiny_8"
        android:background="@drawable/background_round_search"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/base_24"
            android:layout_height="@dimen/base_24"
            android:layout_marginStart="@dimen/small_12"
            android:src="@drawable/ic_search_small" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp8"
            android:layout_marginEnd="@dimen/dp16"
            android:background="@null"
            android:hint="@string/search_for_tokens"
            android:inputType="textFilter"
            android:maxLength="20"
            android:maxLines="1" />

    </LinearLayout>

    <View style="@style/Aw.Component.Separator" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/no_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/base_24"
            android:text="@string/no_results_found" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/token_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>

</LinearLayout>