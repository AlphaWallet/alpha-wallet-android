<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_sheet_header"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/mini_4"
            android:padding="@dimen/tiny_8"
            android:src="@drawable/ic_close"
            app:tint="?colorControlNormal" />

        <TextView
            android:id="@+id/text_title"
            style="@style/Aw.Typography.Toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            tools:text="Title" />

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="@dimen/optimal_30"
            android:layout_height="@dimen/optimal_30"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/standard_16"
            android:src="@drawable/ic_wallet_connect" />

    </RelativeLayout>

    <com.alphawallet.app.widget.WalletConnectRequestWidget
        android:id="@+id/wallet_connect_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.alphawallet.app.widget.FunctionButtonBar
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>