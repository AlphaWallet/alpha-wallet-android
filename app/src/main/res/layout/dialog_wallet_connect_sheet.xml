<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/background_card"
    android:paddingVertical="@dimen/dp16">

    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp16"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_wallet_connect"/>

        <TextView
            android:id="@+id/text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Title"
            android:textColor="@color/black"
            android:textSize="@dimen/sp20"
            android:fontFamily="@font/font_semibold"
            android:paddingHorizontal="@dimen/dp8"
            android:gravity="center"
            android:layout_weight="2"/>

        <ImageView
            android:id="@+id/image_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            android:layout_gravity="center"/>
    </LinearLayout>

    <com.alphawallet.app.widget.DialogInfoItem
        android:id="@+id/info_website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp16"/>

    <com.alphawallet.app.widget.DialogInfoItem
        android:id="@+id/info_network"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:showActionText="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mercury"/>

    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dp16"
        android:layout_marginTop="@dimen/dp16">

        <Button
            android:id="@+id/button_reject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_reject"
            style="@style/AwButton.Secondary"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/dp8"/>

        <Button
            android:id="@+id/button_approve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/approve"
            style="@style/AwButton.Primary"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp8"/>
    </LinearLayout>

</LinearLayout>