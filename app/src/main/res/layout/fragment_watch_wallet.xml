<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/input_view_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/import_action_ww"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <com.alphawallet.app.widget.InputAddress
            android:id="@+id/input_watch_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:hint="@string/input_address"
            custom:label="@string/input_address"
            custom:show_header="false"
            custom:nocam="true"
            custom:imeOptions="actionDone"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            custom:ens="true"/>

    </LinearLayout>

    <Button
        android:id="@+id/import_action_ww"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/nasty_green"
        android:fontFamily="@font/font_semibold"
        android:text="@string/action_watch_account"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/bottom_marker_ww"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
    </LinearLayout>

</RelativeLayout>
