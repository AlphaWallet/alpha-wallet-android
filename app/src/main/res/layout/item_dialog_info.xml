<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingHorizontal="@dimen/standard_16"
    android:paddingVertical="@dimen/cozy_20">

    <TextView
        android:id="@+id/text_label"
        style="@style/Aw.Typography.Label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="Label" />

    <TextView
        android:id="@+id/text_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/small_12"
        android:layout_weight="3"
        tools:text="Message" />

    <TextView
        android:id="@+id/text_action"
        style="@style/Aw.Typography.Control"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="end"
        android:layout_height="wrap_content"
        android:visibility="visible"
        tools:text="Edit" />

</LinearLayout>