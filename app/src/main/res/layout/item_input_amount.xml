<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View style="@style/Aw.Component.Separator" />

    <com.alphawallet.app.widget.StandardHeader
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:controlImageRes="@drawable/ic_swap_horizontal"
        app:headerText="@string/amount"
        app:showChain="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/standard_16"
        android:paddingTop="@dimen/standard_16"
        android:paddingEnd="@dimen/standard_16"
        android:paddingBottom="@dimen/cozy_20">

        <RelativeLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tiny_8"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <com.alphawallet.app.widget.ChainName
                android:id="@+id/chain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/btn_switch"
                android:layout_width="@dimen/token_icon_small"
                android:layout_height="@dimen/token_icon_small"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_swap_horizontal"
                android:visibility="gone"
                tools:visibility="visible" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_select_token"
                style="@style/Aw.Component.Button.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:drawableEnd="@drawable/ic_expand_more"
                android:drawableTint="?colorSurface"
                android:paddingHorizontal="@dimen/base_24"
                android:text="@string/action_select_token"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/layout_more_click"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <com.alphawallet.app.widget.TokenIcon
                    android:id="@+id/token_icon"
                    android:layout_width="@dimen/token_icon"
                    android:layout_height="@dimen/token_icon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/tiny_8"
                    android:foregroundGravity="center_vertical" />

                <TextView
                    android:id="@+id/text_token_symbol"
                    style="@style/Aw.Typography.Title.XLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textAllCaps="true"
                    app:autoSizeTextType="uniform"
                    tools:text="ETH" />

                <ImageView
                    android:id="@+id/expand_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/tiny_8"
                    android:src="@drawable/ic_expand_more"
                    android:visibility="gone"
                    app:tint="?colorControlNormal"
                    tools:visibility="visible" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/gas_fetch_progress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:paddingTop="@dimen/tiny_8"
                android:paddingBottom="@dimen/tiny_8"
                android:visibility="gone"
                tools:visibility="visible" />

            <com.alphawallet.app.ui.widget.entity.NumericInput
                android:id="@+id/amount_entry"
                style="@style/Aw.Typography.Title.XLarge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:completionThreshold="1"
                android:gravity="end"
                android:hint="0"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:lines="1"
                android:maxLines="1"
                android:paddingStart="@dimen/dp5"
                android:paddingEnd="@dimen/dp5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tiny_8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_available"
                style="@style/Aw.Typography.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                tools:text="4.4328" />

            <TextView
                android:id="@+id/equivalent"
                style="@style/Aw.Typography.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="end"
                android:text="0" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_12"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_error"
                style="@style/Aw.Typography.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/error_insufficient_funds"
                android:textColor="?colorError"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/text_all_funds"
                style="@style/Aw.Typography.Control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:lines="1"
                android:text="@string/all_funds"
                android:visibility="visible" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>