<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="60dp"
    android:orientation="vertical">

    <View
        style="@style/Aw.Component.Separator"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/standard_16">

        <TextView
            style="@style/Aw.Typography.Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/subtitle_network" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/small_12"
            android:layout_weight="3.5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.alphawallet.app.widget.TokenIcon
                android:id="@+id/network_icon"
                android:layout_width="@dimen/token_icon_small"
                android:layout_height="@dimen/token_icon_small"
                android:layout_marginEnd="@dimen/small_12"
                android:visibility="visible" />

            <TextView
                android:id="@+id/network_name"
                style="@style/Aw.Typography.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Ethereum" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6" />

    </LinearLayout>

</RelativeLayout>
