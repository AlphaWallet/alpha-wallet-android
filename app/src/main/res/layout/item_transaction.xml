<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/background_marketplace_event"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/normal_margin"
    android:paddingTop="@dimen/normal_margin">

    <ImageView
        android:id="@+id/type_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/big_margin"
        android:contentDescription="@string/empty"
        tools:src="@drawable/ic_arrow_downward_black_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="72dp"
        android:layout_toStartOf="@+id/value"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_light"
                android:maxLines="1"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="Sent" />

            <TextView
                android:id="@+id/supplimental"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:maxLines="1"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="12dp"
                tools:text="" />
        </LinearLayout>

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:ellipsize="end"
            android:fontFamily="@font/font_light"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceListItemSecondary"
            android:textSize="12sp"
            tools:text="0xDEADBEEFDEADBEEFDEADBEEFDEADBEEFD" />
    </LinearLayout>

    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/big_margin"
        android:fontFamily="@font/font_semibold"
        android:textColor="@color/colorAccent"
        tools:text="+10" />
</RelativeLayout>