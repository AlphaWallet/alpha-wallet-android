<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/dp8"
    android:minHeight="60dp">

    <com.alphawallet.app.widget.TokenIcon
        android:id="@+id/token_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/dp10"
        app:showStatus="false" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="40dp"
            android:layout_toStartOf="@id/value"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_regular"
                android:maxLines="1"
                android:textSize="@dimen/sp17"
                tools:text="Sent"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:fontFamily="@font/font_semibold"
                android:textSize="@dimen/sp17"
                tools:text="ETH"
                android:textAppearance="?attr/textAppearanceListItem" />

            <com.alphawallet.app.widget.ChainName
                android:id="@+id/chain_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:visibility="visible"
                custom:font_size="10"/>

        </LinearLayout>

        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/details"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/font_semibold"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14"
            tools:text="+ 673.345 ETH" />

        <TextView
            android:id="@+id/supplimental"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/value"
            android:layout_alignParentEnd="true"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="12sp"
            tools:text="+1.0 ETH" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/details"
            android:layout_alignStart="@id/details"
            android:layout_marginTop="@dimen/dp8"
            android:layout_toStartOf="@id/text_tx_time">

            <TextView
                android:id="@+id/text_to_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/font_light"
                android:layout_marginEnd="3dp"
                android:maxLines="1"
                android:visibility="gone"
                tools:text="to"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/font_light"
                tools:text="0x123456778 ... 3434"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_tx_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/supplimental"
            android:layout_alignParentEnd="true"
            android:visibility="visible"
            android:fontFamily="@font/font_regular"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            tools:text="11:53 pm"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="14sp" />

    </RelativeLayout>
</LinearLayout>