<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_update"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp8"
    android:animateLayoutChanges="true"
    android:background="@drawable/background_round_border"
    android:orientation="vertical"
    android:gravity="start"
    android:paddingStart="@dimen/dp12"
    android:paddingTop="@dimen/dp12"
    android:paddingEnd="@dimen/dp12"
    android:paddingBottom="@dimen/dp12">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_regular"
        android:textColor="@color/white"
        android:text="@string/new_version_title"
        android:layout_marginBottom="@dimen/dp10"
        android:textSize="@dimen/sp24" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_detail_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_regular"
            android:textColor="@color/white"
            tools:text="Installed: 123"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/text_detail_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/font_regular"
            android:textColor="@color/white"
            tools:text="Available: 130"
            android:textSize="@dimen/sp15" />

    </LinearLayout>

</LinearLayout>