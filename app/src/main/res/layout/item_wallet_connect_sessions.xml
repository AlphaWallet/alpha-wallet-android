<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item_wallet_connect"
    style="@style/Aw.Component.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:elevation="1dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginVertical="@dimen/dp20"
        android:src="@drawable/ic_wallet_connect_card"
        android:contentDescription="Wallet connect logo"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp15"
        android:layout_marginVertical="@dimen/dp17"
        android:orientation="vertical">

        <TextView
            style="@style/Aw.Typography.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wc_card_title" />

        <TextView
            style="@style/Aw.Typography.Sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wc_card_subtitle" />
    </LinearLayout>
</LinearLayout>