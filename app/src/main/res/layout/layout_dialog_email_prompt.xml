<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.alphawallet.app.widget.BottomSheetHandleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <TextView
        style="@style/Aw.Typography.Title.Large.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/cozy_20"
        android:layout_marginTop="@dimen/huge_36"
        android:layout_marginEnd="@dimen/cozy_20"
        android:text="@string/stay_updated" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/cozy_20"
        android:layout_marginTop="@dimen/standard_16"
        android:layout_marginEnd="@dimen/cozy_20"
        android:lineSpacingMultiplier="1.8"
        android:text="@string/email_prompt_hint" />

    <com.alphawallet.app.widget.InputView
        android:id="@+id/email_input"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="@dimen/base_24"
        custom:label="@string/hint_email_address" />

    <com.alphawallet.app.widget.FunctionButtonBar
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>


