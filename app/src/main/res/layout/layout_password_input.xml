<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/box_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/background_password_entry"
        android:inputType="textMultiLine|textNoSuggestions"
        android:imeOptions="actionDone"
        android:minHeight="56dp"
        android:paddingBottom="5dp"
        android:paddingEnd="6dp"
        android:paddingStart="6dp"
        android:paddingTop="5dp"
        android:textColor="@color/grey2"
        android:textColorHint="@color/light_gray"
        android:textSize="18sp" />

        <CheckBox
            android:id="@+id/toggle_password"
            android:button="@drawable/selector_password"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_marginEnd="31dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/text_chain_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32dp"
            android:layout_centerInParent="true"
            android:background="@drawable/background_status_pending"
            android:fontFamily="@font/font_bold"
            android:padding="2dp"
            android:text="@string/action_clear"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="31dp"
        android:background="@color/white"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:fontFamily="@font/font_regular"
        android:textColor="@color/colorPrimaryDark"
        android:visibility="invisible"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/error"
        android:layout_below="@id/box_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/font_regular"
        android:layout_marginEnd="16dp"
        android:textColor="@color/cancel_red"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/instruction"
        android:layout_below="@id/box_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/font_regular"
        android:layout_marginEnd="16dp"
        android:textColor="@color/text_dark_gray"
        android:textSize="12sp"
        android:visibility="gone" />
</RelativeLayout>