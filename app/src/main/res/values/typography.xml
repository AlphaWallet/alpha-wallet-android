<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Aw.Typography" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:textSize">@dimen/sp17</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHint">?android:textColorSecondary</item>
    </style>

    <style name="Aw.Typography.SemiBold">
        <item name="android:fontFamily">@font/font_semibold</item>
    </style>

    <style name="Aw.Typography.Headline">
        <item name="android:textSize">@dimen/sp28</item>
    </style>

    <style name="Aw.Typography.Title">
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Aw.Typography.Title.SemiBold">
        <item name="fontFamily">@font/font_semibold</item>
        <item name="android:textSize">@dimen/sp20</item>
    </style>

    <style name="Aw.Typography.Title.Large">
        <item name="android:textSize">@dimen/sp24</item>
    </style>

    <style name="Aw.Typography.Title.Large.Bold">
        <item name="fontFamily">@font/font_bold</item>
    </style>

    <style name="Aw.Typography.Title.XLarge">
        <item name="android:textSize">@dimen/sp36</item>
    </style>

    <style name="Aw.Typography.Title.XLarge.Bold">
        <item name="fontFamily">@font/font_bold</item>
    </style>

    <style name="Aw.Typography.Sub">
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Aw.Typography.Sub.Small">
        <item name="android:textSize">@dimen/sp13</item>
    </style>

    <style name="Aw.Typography.Caption">
        <item name="android:textSize">@dimen/sp15</item>
    </style>

    <style name="Aw.Typography.Caption.SemiBold">
        <item name="android:fontFamily">@font/font_semibold</item>
        <item name="android:textSize">@dimen/sp15</item>
    </style>

    <style name="Aw.Typography.Label">
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Aw.Typography.Label.Small">
        <item name="fontFamily">@font/font_semibold</item>
        <item name="android:textSize">@dimen/sp13</item>
    </style>

    <style name="Aw.Typography.Control">
        <item name="android:textColor">?colorAccent</item>
        <item name="android:fontFamily">@font/font_semibold</item>
    </style>

    <style name="Aw.Typography.Small">
        <item name="android:textSize">@dimen/sp12</item>
    </style>

    <style name="Aw.Typography.Error">
        <item name="android:textColor">?colorError</item>
    </style>

    <style name="Aw.Typography.NotificationBadge">
        <item name="fontFamily">@font/font_semibold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">?colorOnError</item>
        <item name="android:background">@drawable/background_settings_badge</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Aw.Typography.Toolbar">
        <item name="android:fontFamily">@font/font_semibold</item>
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingStart">@dimen/standard_16</item>
        <item name="android:paddingEnd">@dimen/standard_16</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Aw.Typography.Tab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Aw.Typography.Tab.Chart" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/sp17</item>
        <item name="android:padding">@dimen/small_12</item>
    </style>

    <style name="Aw.Typography.StandardHeader" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/font_semibold</item>
        <item name="android:lines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">@dimen/sp15</item>
    </style>
</resources>
